<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@drawable/appshaddow"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialogborder"
        android:gravity="center_vertical|center_horizontal"
        android:lines="1"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:text="@string/title_activity_keygen2"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"/>

    <org.webpki.mobile.android.keygen2.KeyGen2InitLayout
        android:id="@+id/primaryWindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" >
                    
      <TextView
          android:id="@+id/win"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:minLines="2"
          android:text="The following provider wants to create&#10;login credentials for you:"
          android:textColor="#000000" />
    
        <TextView
          android:id="@+id/partyInfo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="20dp"
          android:background="@drawable/partyborder"
          android:paddingBottom="6dp"
          android:paddingLeft="10dp"
          android:paddingRight="10dp"
          android:paddingTop="6dp"
          android:text="Waiting..."
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textColor="#000000"/>
      
      <include layout="@layout/old_buttons"/>
    
    </org.webpki.mobile.android.keygen2.KeyGen2InitLayout>

</LinearLayout>