<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@drawable/appshaddow"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1px"
        android:background="@drawable/dialogborder"
        android:gravity="center_vertical|center_horizontal"
        android:padding="4dp"
        android:text="@string/title_activity_keygen2"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

    <org.webpki.mobile.android.keygen2.KeyGen2PINLayout
        android:id="@+id/primaryWindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical" >
  
          <TextView
              android:id="@+id/errorPIN"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:text="err"
              android:textColor="#ff0000" />
  
          <TextView
              android:id="@+id/setPINtext"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:layout_marginBottom="10dp"
              android:layout_marginTop="5dp"
              android:text="Set PIN"
              android:textColor="#000000"
              android:textSize="20dp" />
  
          <TextView
              android:id="@+id/leadpin1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Specify a PIN of your choice:"
              android:textColor="#000000" />
  
          <EditText
              android:id="@+id/editpin1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ems="10"
              android:singleLine="true"
              android:imeOptions="flagNoFullscreen"
              android:inputType="numberPassword"
              android:password="true" >
  
              <requestFocus />
          </EditText>
  
          <TextView
              android:id="@+id/leadpin2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Retype the PIN:"
              android:textColor="#000000" />
  
          <EditText
              android:id="@+id/editpin2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ems="10"
              android:singleLine="true"
              android:imeOptions="flagNoFullscreen"
              android:inputType="numberPassword"
              android:password="true" />
  
       </LinearLayout>

    <include layout="@layout/old_buttons"/>

    </org.webpki.mobile.android.keygen2.KeyGen2PINLayout>

</LinearLayout>